{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
<div class="container">
    
	<picture>
		<img src="{{ asset('uploads/') ~ image.name }}" class="img-fluid img-thumbnail">
	</picture>
	
		{% for comment in image.comment %}
			<div class="card m-4">
			  <div class="card-header">Comment</div>
			  <div class="card-body">
			  		<p class="card-text">{{comment}}</p>
			  </div>
			</div>
		{% endfor %}
    

    <a href="{{ path('image_edit', {'id': image.id}) }}"><button class="btn btn-primary m-2">Edit</button></a>
    {{ include('image/_delete_form.html.twig') }}

    <a href="{{ path('image_index') }}"><button class="btn btn-primary m-2"> back to list</button></a>

</div>
{% endblock %}
